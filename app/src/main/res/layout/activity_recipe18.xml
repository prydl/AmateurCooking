<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/leftarrow" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="Mushroom Risotto"
                android:textColor="@color/title_text_color"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/recipephoto"
                android:layout_width="386dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/mushroomrisotto" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                app:srcCompat="@drawable/time" />

            <TextView
                android:id="@+id/time"
                android:layout_width="197dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="sans-serif"
                android:text="1HR 15MINS"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="59dp"
                android:layout_marginRight="59dp"
                app:srcCompat="@drawable/serves" />

            <TextView
                android:id="@+id/serves"
                android:layout_width="197dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="4 SERVES"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipe"
                android:layout_width="388dp"
                android:layout_height="315dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="1dp"
                android:text="1. Add flour, pinch of salt, butter into a large mixing bowl. \n 2. Rub lightly into flour with your fingertips and then stir through sugar. \n 3. Beat 1 egg then drizzle over flour mixture. \n 4. Bring the dough together by cutting the liquid into the dough with a knife, then form into a smooth ball with your hands.\n 5. Divide dough into two pieces, one slightly larger than the other.\n 6. Wrap in plastic wrap, and chill for 30 minutes. \n7. Peel and core the apples and cut each into 8 pieces.\n 8. Toss immediately with lemon juice in a large bowl. \n9. Place the butter and sugar in a large frypan over medium-low heat. \n 10. Add apples and spices, then stir to coat.\n 11. Cook, stirring occasionally, for 10 minutes or until apples have softened. Set aside to cool.\n 12. Place filling in base of larger flattened pastry ball and then top with smaller pastry ball.\n 13. Preheat oven to 180C, place pie dish on a baking tray and sprinkle caster sugar and bake for 45 minutes or until golden brown. " />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>